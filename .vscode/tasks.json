{
  "version": "2.0.0",
  "presentation": {
    "reveal": "always",
    "panel": "shared"
  },
  "tasks": [
    {
      "label": "Run Streamlit Dashboard",
      "type": "shell",
      "command": ".\\.venv\\Scripts\\python.exe",
      "args": [
        "-m",
        "streamlit",
        "run",
        "dashboard\\app.py",
        "--server.port",
        "8501",
        "--server.address",
        "127.0.0.1"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "streamlit",
          "pattern": [
            {
              "regexp": "^(.*)$",
              "message": 1
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*",
            "endsPattern": "(Local URL:|Network URL:|You can now view your Streamlit app in your browser)"
          }
        }
      ],
      "group": {
        "kind": "none",
        "isDefault": false
      }
    },
    {
      "label": "Run FastAPI (Uvicorn)",
      "type": "shell",
      "command": ".\\.venv\\Scripts\\python.exe",
      "args": [
        "-m",
        "uvicorn",
        "api.main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "uvicorn",
          "pattern": [
            {
              "regexp": "^(.*)$",
              "message": 1
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Waiting for application startup.",
            "endsPattern": "Uvicorn running on"
          }
        }
      ],
      "group": "build"
    }
  ]
}
